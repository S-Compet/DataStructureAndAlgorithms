//CODE

fun main() {
	
}

fun solution(array: IntArray) {
	var maxSum = Int.MIN_VALUE
	var sum = 0
	
	for (index in 0 until array.size) {
		sum += array[index]
		maxSum = Math.max(maxSum, sum)
		
		if (sum < 0)
			sum = 0
	}
}

